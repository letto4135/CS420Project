        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Last Name</th>
                    <th scope="col">Guests</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Table Number</th>
                    <th scope="col">Remove</th>
